        <item name="android:paddingLeft">120dp</item>
    </style>
    
    <style name="bar">
        <item name="android:background">#000000</item>
        
    </style>
    
    <style name="button_text" >
    <item name="android:layout_width" >match_parent</item>
    <!-- <item name="android:layout_height" >32dp</item> -->
